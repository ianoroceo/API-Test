{
  "name": "airportgap-supertest-mocha-chai",
  "version": "1.0.0",
  "description": "Sample API test solution using supertest + mocha + chai for Airport Gap",
  "scripts": {
    "test": "mocha \"tests/**/*.test.js\" --timeout 30000 --reporter spec",
    "test:smoke": "mocha \"tests/**/*smoke*.test.js\" --timeout 15000 --reporter spec"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "mocha": "^10.4.0",
    "supertest": "^7.0.0",
    "dotenv": "^16.4.5"
  }
}